"use client";

import React, { useState } from 'react';

export default function AddSpotPage() {
  const [formData, setFormData] = useState({
    name: '',
    location: '',
    wifiSpeed: '',
  });

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    // THE GOAL: Log the data to the console
    console.log("üèçÔ∏è New Spot Submitted:", formData);
    alert("Check your browser console (F12) to see the data!");
  };

  return (
    <div className="min-h-screen bg-slate-900 text-white p-8 flex flex-col items-center">
      <h1 className="text-3xl font-bold mb-8 text-orange-500">Add a Nomad Rider Spot</h1>
      
      <form 
